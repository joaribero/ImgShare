<div class="card mb-3 shadow-lg custom-card">
    <div class="card-header d-flex justify-content-between text-white align-items-center custom-card-h">
        <h3><i class="fas fa-user-circle"></i> SignUp</h3>
    </div>
    <div class="card-body">
        <div class="col-md-6">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <input type="text" name="username" placeholder="Insert Username" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Insert Password" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Insert Email" class="form-control" required>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <input type="text" name="firstName" placeholder="Insert First Name" class="form-control" required>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" name="lastName" placeholder="Insert Last Name" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>