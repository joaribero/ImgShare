{{#if sidebar.comments}}
{{log sidebar.comments}}
    <div class="card mt-2 custom-card">
        <div class="card-header text-white custom-card-h">
            <h5><i class="fas fa-comments"></i> Latest comments</h5>
        </div>
        <div class="card-body text-white">
            {{#each sidebar.comments}}
                <div class="row mb-2">
                    <div class="col">
                        <a href="/images/{{image.uniqueId}}">
                            <img src="/public/upload/{{image.fileName}}" class="img-thumbnail w-70 h-70 custom-img">
                        </a>
                    </div>
                    <div class="col">
                        <blockquote class="w-100 p-1">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{#each comments.usern}}<span>{{firstName}}</span>{{/each}}
                                <span>{{timeAgo timestamp}}</span>
                            </footer>
                        </blockquote>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}